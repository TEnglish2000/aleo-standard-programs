{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "types": ["node", "mocha", "ts-node"]
  },
  "include": ["src/*", "test/*"],
}
